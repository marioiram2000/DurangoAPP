<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorOnPrimary">@color/colorOnPrimary</item>
        <item name="shapeAppearanceOverlay">@style/MyShapeAppearance</item>
        <item name="android:fontFamily">@font/kaushanscript</item>
        <item name="android:windowContentTransitions">true</item>
    </style>

    <style name="StyleFragment" parent="Theme.MaterialComponents.Light">
        <!-- Customize your theme here. -->
        <item name="android:textColor">@color/negroFondo</item>
        <item name="android:background">@color/gray</item>

    </style>

    <style name="transitionStyle" parent="AppTheme">

        <!-- enable window content transitions -->
        <item name="android:windowActivityTransitions">true</item>

        <!-- specify enter and exit transitions -->
        <item name="android:windowEnterTransition">@transition/explode</item>
        <item name="android:windowExitTransition">@transition/explode</item>

    </style>

    <style name="BaseAppTheme" parent="android:Theme.Material">
        <!-- enable window content transitions -->
        <item name="android:windowActivityTransitions">true</item>

        <!-- specify enter and exit transitions -->
        <item name="android:windowEnterTransition">@transition/explode</item>
        <item name="android:windowExitTransition">@transition/explode</item>

        <!-- specify shared element transitions -->
        <item name="android:windowSharedElementEnterTransition">
            @transition/change_image_transform</item>
        <item name="android:windowSharedElementExitTransition">
            @transition/change_image_transform</item>
    </style>
    <style name="Sopa">
        <item name="android:textColor">@color/negroFondo</item>
        <item name="android:colorBackground">@color/blancoFondo</item>
    </style>

    <style name="SplashScreenTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/bg_splash</item>
    </style>

    <style name="MyShapeAppearance">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">20dp</item>
        <item name="cornerSizeBottomRight">20dp</item>
        <item name="cornerSizeTopLeft">20dp</item>
        <item name="cornerSizeBottomLeft">20dp</item>
    </style>

    <style name="RoundHelp">
        <item name="shapeAppearanceOverlay"></item>
        <item name="android:shape">@drawable/roundedbutton</item>
    </style>

    <style name="mytoast">
        <item name="stTextBold">true</item>
        <item name="stTextSize">14sp</item>
        <item name="stColorBackground">@color/colorPrimaryDark</item>
        <item name="stSolidBackground">true</item>
        <item name="stStrokeWidth">3dp</item>
        <item name="stIconStart">@drawable/ic_update</item>
        <item name="stLength">LONG</item>

        <item name="stRadius">25dp</item>
    </style>

    <style name="mytoastCorrecta">
        <item name="stTextBold">true</item>
        <item name="stTextSize">14sp</item>
        <item name="stColorBackground">@android:color/holo_green_dark</item>
        <item name="stSolidBackground">true</item>
        <item name="stStrokeWidth">3dp</item>
        <item name="stIconStart">@drawable/mapbox_ic_check</item>
        <item name="stLength">SHORT</item>

        <item name="stRadius">25dp</item>
    </style>

    <style name="mytoastIncorrecta">
        <item name="stTextBold">true</item>
        <item name="stTextSize">14sp</item>
        <item name="stColorBackground">@android:color/holo_red_dark</item>
        <item name="stSolidBackground">true</item>
        <item name="stStrokeWidth">3dp</item>
        <item name="stIconStart">@drawable/ic_delete</item>
        <item name="stLength">SHORT</item>

        <item name="stRadius">25dp</item>
    </style>

    <style name="wrap_content">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="estiloa4_1"> <!-- Estilo del primer linearLayout -->
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:padding">10dp</item>
    </style>

    <style name="estiloa4_2" parent="wrap_content"> <!-- Estilo para los elementos arrastrables -->
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:layout_marginRight">5dp</item>
        <item name="android:textSize">20sp</item>
        <item name="android:padding">5dp</item>

        <item name="android:background">@drawable/bg_palabras_errotatextos</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
    </style>

    <style name="estiloa4_3" parent="estiloa4_2"> <!-- Estilo para los botones -->
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">20sp</item>
        <item name="android:padding">7dp</item>
        <!--<item name="android:background">@drawable/p2_border3</item>-->
    </style>

    <style name="estiloa4_4" parent="wrap_content"> <!-- Estilo para los ScrollView/TextView -->
        <item name="android:textSize">20sp</item>
        <item name="android:padding">3dp</item>
    </style>

    <style name="estiloa4_5" parent="estiloa4_4"> <!-- Estilo para los ScrollView/EditText -->
        <item name="android:layout_width">120dp</item>
        <item name="android:focusable">false</item>
    </style>

    <style name="estiloa4_6" > <!-- Estilo para el ScrollView de la Actividad 4 -->
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <!--        <item name="android:background">@drawable/a4_border1</item>-->
        <item name="android:fadeScrollbars">false</item>
        <!--        <item name="android:padding">25dp</item>-->
        <item name="android:padding">15dp</item>
        <item name="android:scrollbarSize">20dp</item>
    </style>


</resources>
