<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Zona8_1"
    android:background="@color/papiro">

    <TextView
        android:id="@+id/txtZona8_1_Titulo"
        style="@style/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/txtZona8_Titulo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imgZona8_1_Txorimalo"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="28dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtZona8_1_Titulo"
        app:srcCompat="@drawable/txorimalo" />

    <ScrollView
        android:id="@+id/scrollerZona8_1"
        android:layout_width="227dp"
        android:layout_height="130dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="36dp"
        app:layout_constraintStart_toEndOf="@+id/imgZona8_1_Txorimalo"
        app:layout_constraintTop_toBottomOf="@+id/txtZona8_1_Titulo">

        <TextView
            android:id="@+id/txtZona8_1_Txorimalo"
            style="@style/normalText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="20dp"
            android:gravity="bottom"
            android:maxLines="5"
            android:scrollbars="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtZona8_1_Titulo">
            <requestFocus />
        </TextView>
    </ScrollView>

    <Button
        android:id="@+id/btnZona8_1_Llave"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="33dp"
        android:text="GILTZA"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgZona8_1_Txorimalo"
        style="@style/buttonText"/>

    <ImageView
        android:id="@+id/imgZona8_1_Llave"
        android:layout_width="357dp"
        android:layout_height="232dp"
        android:layout_marginTop="40dp"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnZona8_1_Llave"
        app:srcCompat="@drawable/llave" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/zona8_1_fbtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="176dp"
        android:layout_marginBottom="40dp"
        android:src="@drawable/ic_stat_name"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>