<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Zona1_8"
    android:background="@color/papiro">

    <TextView
        android:id="@+id/txtZona1_8_Titulo"
        style="@style/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/txtZona1_8_Titulo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imgZona1_8_Txorimalo"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="28dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtZona1_8_Titulo"
        app:srcCompat="@drawable/txorimalo" />

    <TextView
        android:id="@+id/txtZona1_8_Txorimalo"
        style="@style/normalText"
        android:layout_width="182dp"
        android:layout_height="122dp"
        android:layout_marginStart="32dp"
        app:layout_constraintBottom_toBottomOf="@+id/imgZona1_8_Txorimalo"
        app:layout_constraintStart_toEndOf="@+id/imgZona1_8_Txorimalo"
        app:layout_constraintTop_toTopOf="@+id/imgZona1_8_Txorimalo" />

    <ImageView
        android:id="@+id/imgZona1_8_TxorimaloLetraD"
        android:layout_width="235dp"
        android:layout_height="247dp"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@+id/txtZona1_8_LetraD"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.568"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgZona1_8_Txorimalo"
        app:srcCompat="@drawable/txorimalo_letra" />

    <TextView
        android:id="@+id/txtZona1_8_LetraD"
        style="@style/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        android:text="@string/txtZona1_8_LetraD"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@+id/zona1_8_fbtn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/zona1_8_fbtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="35dp"
        android:src="@drawable/map"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/txtZona1_8_D"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="48dp"
        android:textColor="@color/darkWine"
        android:text="D"
        android:textSize="48sp"
        android:textStyle="bold"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="@+id/imgZona1_8_TxorimaloLetraD"
        app:layout_constraintTop_toTopOf="@+id/imgZona1_8_TxorimaloLetraD" />

</androidx.constraintlayout.widget.ConstraintLayout>